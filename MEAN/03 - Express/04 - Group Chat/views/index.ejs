<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Group Chat</title>

    <link rel="stylesheet" href="bower_components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="bower_components/materialize/dist/css/materialize.min.css">
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <main>
        <div id="username" class="valign-wrapper">
            <div class="section valign">
                <div class="container">
                    <div class="row center-align">
                        <h4>Pick a name:</h4>

                        <div class="input-field col s12">
                            <input type="text" name="name" id="name">
                            <label for="name">Name</label>
                        </div>

                        <div class="col s12">
                            <button id="nameSubmit" class="btn">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="chat-wrapper" class="container messages">
            <div class="section">
                <div class="row">
                    <h3 class="center-align">Conversation Board</h3>
                </div>
            </div>

            <div class="section">
                <h4>Users:</h4>

                <div class="row">
                    <div id="users"></div>
                </div>
            </div>

            <div id="board" class="section">
                <div class="row">
                    <div class="input-field col s10 offset-s1">
                        <textarea name="message" id="message" class="materialize-textarea"></textarea>
                        <label for="message">Post a new message:</label>
                    </div>

                    <div class="col s10 offset-s1 right-align">
                        <button id="newMessage" class="btn">Post</button>
                    </div>
                </div>

                <div id="history"></div>
            </div>
        </div>
    </main>

    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <script src="bower_components/materialize/dist/js/materialize.min.js"></script>
    <script src="js/script.js"></script>
</body>
</html>
