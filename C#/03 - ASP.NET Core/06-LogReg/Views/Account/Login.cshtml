@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="section">
        <div class="row center-align">
            <h1>Login!</h1>
            <a href="/register">Register</a>
        </div>



        @{

            if (ViewBag.Error.Length > 0)
            {
                <div class="section">
                    <div class="row">
                        <div class="card card-panel red darken-2 white-text center-align">
                            <div class="card-text white-text">@ViewBag.Error</div>
                        </div>
                    </div>
                </div>
            }

            if (ViewBag.Success != null)
            {
                <div class="section">
                    <div class="row">
                        <div class="card card-panel green darken-2 white-text center-align">
                            <div class="card-text white-text">@ViewBag.Success</div>
                        </div>
                    </div>
                </div>
            }
        }

        <div class="section">
            <form action="/login" method="post">
                <div class="row">
                    <div class="col input-field s10 offset-s1">
                        <input type="email" name="email" id="email">
                        <label for="email">Email Address:</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col input-field s10 offset-s1">
                        <input type="password" name="password" id="password">
                        <label for="password">Password:</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col s10 offset-s1">
                        <input type="submit" value="Login" class="btn">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>